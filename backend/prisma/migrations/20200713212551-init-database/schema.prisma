generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model Tasks {
  id          Int       @default(autoincrement()) @id
  TodoId      Int?
  text        String?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Todos {
  id          Int       @default(autoincrement()) @id
  title       String?
  description String?
  checked     Boolean   @default(false)
  checkedAt   DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
