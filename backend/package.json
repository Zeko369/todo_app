{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nexus dev",
    "db:generate": "yarn prisma migrate save --experimental",
    "db:up": "yarn prisma migrate up --experimental",
    "db:new": "yarn db:generate && yarn db:up",
    "db:seed": "ts-node utils/seed.ts",
    "db:drop": "dropdb todo_development",
    "db:create": "createdb todo_development",
    "db:reset": "yarn db:drop && yarn db:create && yarn db:up && yarn db:seed",
    "build": "nexus build",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^8.5.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "nexus": "^0.26.1",
    "nexus-plugin-jwt-auth": "^1.3.1",
    "nexus-plugin-prisma": "^0.18.2",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/faker": "^4.1.12",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.23",
    "ts-node": "^8.10.2"
  }
}
