{
  "compilerOptions": {
    "plugins": [{ "name": "nexus/typescript-language-service" }],
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*", "./utils/**/*"]
}
